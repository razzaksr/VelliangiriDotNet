<Window x:Class="ExpertBuddy.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertBuddy"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800" Background="Black" Foreground="White">
    <Grid>
        <DockPanel HorizontalAlignment="Left">
            <Menu DockPanel.Dock="Top" Width="100" Background="Black" Foreground="White">
                <MenuItem Header="_Actions">
                    <MenuItem Header="_Enroll" Click="MenuItem_Click" Background="Black" Foreground="White"/>
                    <MenuItem Header="_Edit" Click="MenuItem_Click_1" Background="Black" Foreground="White"/>
                    <MenuItem Header="_View" Click="MenuItem_Click_2" Background="Black" Foreground="White"/>
                    <MenuItem Header="_Delete" Click="MenuItem_Click_4" Background="Black" Foreground="White"/>
                    <Separator/>
                    <MenuItem Header="_Exit" Click="MenuItem_Click_3" Background="Black" Foreground="White"/>
                </MenuItem>
            </Menu>
        </DockPanel>

    </Grid>
</Window>
